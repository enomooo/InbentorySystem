@page "/shiire/delete/select"
@using InbentorySystem.Data
@using InbentorySystem.Services
@using InbentorySystem.Data.Models
@inject NavigationManager NavigationManager
@inject IShiireService ShiireService
@inject IShiireRepository ShiireRepository

<h1>仕入削除</h1>

@if (ShiireService.GetShiireList().Count == 0)
{
    <div class="alert alert-warning">検索結果がありません。<a href="/shiire/index">検索に戻る</a></div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>仕入番号</th>
                <th>仕入日</th>
                <th>商品コード</th>
                <th>仕入先コード</th>
                <th>数量</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in ShiireService.GetShiireList())
            {
                <tr>
                    <td>@s.ShiireNo</td>
                    <td>@s.ShiireNengappi.ToString("yyyy/MM/dd")</td>
                    <td>@s.ShohinCode</td>
                    <td>@s.ShiiresakiCode</td>
                    <td>@s.Quantity</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(s)">削除</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button class="btn btn-secondary mt-3" @onclick='() => NavigationManager.NavigateTo("/shiire/index")'>
        仕入管理メニューに戻る
    </button>
}

@if (Target != null)
{
    <div class="alert alert-danger mt-4">
        <p>削除ボタンを押すともとに戻せませんが、本当に削除しますか？</p>
        <p>キャンセルは「仕入管理メニューに戻る」を押してください。</p>
        <button class="btn btn-danger me-3" @onclick="DeleteConfirmed">削除</button>
        <button class="btn btn-secondary" @onclick="CancelDelete">キャンセル</button>
    </div>
}

@code {
    private ShiireModel? Target;

    private void ConfirmDelete(ShiireModel model)
    {
        Target = model;
    }

    private void CancelDelete()
    {
        Target = null;
    }

    private async Task DeleteConfirmed()
    {
        if (Target is null) return;

        var beforeQuantity = Target.Quantity;
        var result = await ShiireRepository.DeleteAsync(
            Target.ShiireNengappi.ToString("yyyy-MM-dd"),
            Target.ShohinCode,
            Target.Quantity);

        if (result > 0)
        {
            ShiireService.SetLastDeletedShiire(Target);
            NavigationManager.NavigateTo("/shiire/delete/result");
        }
    }
}
