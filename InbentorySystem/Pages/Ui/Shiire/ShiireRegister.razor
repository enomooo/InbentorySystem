@page "/shiire/register"
@using InbentorySystem.Data.Models
@using InbentorySystem.Services
@using InbentorySystem.Services.Interfaces
@inject IShiireService ShiireService
@inject NavigationManager NavigationManager

<PageTitle>仕入登録結果</PageTitle>

<h1 class="mb-4">仕入登録結果</h1>

@if (ShiireService.LastRegisteredShiire is not null)
{
    var s = ShiireService.LastRegisteredShiire;

    <div class="card p-4 shadow-sm mb-4">
        <h2>登録された仕入情報</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>仕入日付</th>
                    <th>商品コード</th>
                    <th>仕入先コード</th>
                    <th>数量</th>
                    <th>仕入値</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@s.ShiireNengappi.ToString("yyyy/MM/dd")</td>
                    <td>@s.ShohinCode</td>
                    <td>@s.ShiiresakiCode</td>
                    <td>@s.Quantity</td>
                    <td>@s.Shiirene</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="card p-4 shadow-sm mb-4">
        <h2>在庫加算結果</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>商品コード</th>
                    <th>加算数量</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@s.ShohinCode</td>
                    <td>@s.Quantity</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex gap-3 mt-4">
        <button class="btn btn-secondary" @onclick="NavigateBack">
            <i class="bi bi-arrow-left"></i> メニューに戻る
        </button>
    </div>
}
else
{
    <div class="alert alert-warning">
        登録された仕入情報が見つかりません。<br />
        <a href="/shiire/index">仕入登録画面に戻る</a> から再度登録してください。
    </div>
}

@code {
    private void NavigateBack()
    {
        NavigationManager.NavigateTo("/shiire/index");
    }
}
